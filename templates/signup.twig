{% extends "generic.twig" %}
{% block title %} SignUp {% endblock %}
{% block main %}
    <form action="{{ url_for('signup_action') }}" method="POST" class="formulario">
        <label for="email">Email:</label>
        {% if email_data is defined %}
            <input type="email" value="{{ email_data }}" name="email" id="email" class="specialInputs"/>
            {% if email_error is defined %}
            <p class="error">{{ email_error }}</p>
            {% endif %}
        {% else %}
            <input type="email" name="email" id="email" class="specialInputs"/>
        {% endif %}

        <label for="password">Password:</label>
        {% if password_data is defined %}
            <input type="password" value="{{ password_data }}" name="password" id="password" class="specialInputs"/>
            {% if password_error is  defined %}
                <p class="error">{{ password_error }}</p>
            {% endif %}
        {% else %}
            <input type="password" name="password" id="password" class="specialInputs"/>
        {% endif %}

        <label for="birthday">Birthday:</label>
        {% if birthday_data is defined %}
            <input type="date" value="{{ birthday_data }}" name="birthday" id="birthday" class="specialInputs"/>
            {% if birthday_error is  defined %}
                <p class="error">{{ birthday_error }}</p>
            {% endif %}
        {% else %}
            <input type="date" name="birthday" id="birthday" class="specialInputs"/>
        {% endif %}

        <label for="cellphone">Cellphone:</label>
        {% if cellphone_data is defined %}
            <input type="text" value="{{ cellphone_data }}" name="cellphone" id="cellphone" class="specialInputs"/>
            {% if cellphone_error is defined %}
                <p class="error">{{ cellphone_error }}</p>
            {% endif %}
        {% else %}
            <input type="text" name="cellphone" id="cellphone" class="specialInputs"/>
        {% endif %}

        <input type="submit" value="Sign up" class="specialInputs">
    </form>
{% endblock %}